@model TaskR.Data.Aufgabe

@{
    ViewData["Title"] = "Aufgabe löschen";
}

<h1>@TempData["Title"]</h1>
<h5>Möchten Sie diese Aufgabe wirklich löschen?</h5>
<hr />
<div class="btn-group">
    <a href="/FreeUser/TodoDetails?TodoId=@Model.TodoId" class="btn btn-primary">Zurück zu Details</a>
    <a asp-action="Index" class="btn btn-primary">Zurück zur ToDo-Liste</a>
</div>
<br />
<br />
<div>
    <h5>@Html.DisplayFor(model => model.Beschreibung)</h5>
    <h5>@Html.DisplayFor(model => model.Todo.TodoName)</h5>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Erledigt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Erledigt)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ErstelltDatum)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ErstelltDatum)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ErledigtDatum)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ErledigtDatum)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Deadline)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Deadline)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Priorität)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Priorität)
        </dd>
    </dl>
    
    <form asp-action="DeleteTask">
        <input type="hidden" asp-for="AufgabeId" />
        <input type="hidden" asp-for="TodoId" />
        <input type="submit" value="Aufgabe löschen" class="btn btn-danger" />
        
    </form>
</div>

@if (TempData["Message"] != null)
{
    <div class="toast-container position-fixed top-50 start-50 translate-middle">
        <div id="msgToast" class="toast align-items-center text-bg-primary border-0" role="alert">
            <div class="d-flex">
                <div class="toast-body" style="color:maroon">
                    @TempData["Message"]
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        document.addEventListener("DOMContentLoaded", function () {
            var toastEl = document.getElementById('msgToast');
            var toast = new bootstrap.Toast(toastEl, { delay: 3000 });
            toast.show();
        });
    </script>
}